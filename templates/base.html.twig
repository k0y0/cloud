<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Home Cloud System{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('assets/js/jquery-3.6.0.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{% if app.user %}{{ path("dashboard") }}{% else %}{{ path("app_login") }}{% endif %}">HomeDrive</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("dashboard") }}">Strona Główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Moje Pliki</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Udostępnione</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ustawienia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("app_logout") }}">Wyloguj</a>
                        </li>
                    {% else %}
                        {% if app.request.get('_route') == 'app_register' %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path("app_login") }}">Logowanie</a>
                            </li>
                        {% endif %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div id="alert-section">
        {% for flash in app.flashes('message') %}
            <div class="alert alert-dark" role="alert">{{ flash }}</div>
        {% endfor %}
    </div>
    <div id="page_wrapper">
        {% block body %}
        {% endblock %}
    </div>
    <div id="foot">

    </div>
    </body>
</html>
