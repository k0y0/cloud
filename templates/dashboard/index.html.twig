{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <div class="container">
        <div id="uploader-form" class="">

            {{ form_start(form) }}
            {{ form_row(form.filename, ) }}

            <button type="submit" class="btn btn-outline-dark">Prześlij</button>
            {{ form_end(form) }}
        </div>
        <div id="info">

            <span>Wolna przestrzeń: {{ userSpaceInfo.left|round(2)}}{{ userSpaceInfo.format  }}</span>
            <div class="progress">
                <div class="progress-bar" style="width:{{ userSpaceInfo.percent }}%" role="progressbar" aria-valuemin="0" aria-valuemax="100">{{ userSpaceInfo.percent }}%</div>
            </div>
        </div>
        <div>
            {{ dump(userSpaceInfo) }}
        </div>
    </div>
{% endblock %}
